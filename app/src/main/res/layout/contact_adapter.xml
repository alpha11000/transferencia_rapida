<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:backgroundTint="@color/green_darker">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        
        <androidx.cardview.widget.CardView
            android:id="@+id/contact_initials_card"
            android:layout_width="32dp"
            android:layout_height="32dp"

            android:layout_margin="8dp"
            app:cardCornerRadius="90dp"
            android:backgroundTint="@color/blue_dark_primary">

            <TextView
                android:id="@+id/contact_initials"
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:gravity="center"

                android:textColor="@color/white"
                style="@style/TextSm"
                android:text="NC"/>
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/contact_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_gravity="center_vertical"
            android:layout_marginEnd="8dp"

            android:textColor="@color/green_darker"
            style="@style/TextSm"
            android:text="Nome Contato"/>
        
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>