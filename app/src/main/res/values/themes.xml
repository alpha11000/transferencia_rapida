<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Transferencia_rapida" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/green_darker</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    
    <style name="disabled_button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/rounded_rectangle</item>
        <item name="android:backgroundTint">@color/gray_light_primary</item>
        <item name="android:textColor">@color/gray_dark_primary</item>
        <item name="android:textSize">16sp</item>
        <item name="android:enabled">false</item>
    </style>

    <style name="enabled_button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/rounded_rectangle</item>
        <item name="android:backgroundTint">@color/green_light</item>
        <item name="android:textColor">@color/green_darker</item>
        <item name="android:textSize">16sp</item>
        <item name="android:enabled">true</item>
    </style>


    <style name="main_toolbar_style">
        <item name="android:background">@color/green_darker</item>
        <item name="titleTextColor">@color/white</item>
    </style>
    
    <style name="textLayoutScale">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="TextSm" parent="textLayoutScale">
        <item name="android:textSize">14sp</item>
        <item name="lineHeight">16sp</item>
    </style>
    
    <style name="TextXs" parent="textLayoutScale">
        <item name="android:textSize">12sp</item>
        <item name="lineHeight">18sp</item>
    </style>

    <style name="TextSt" parent="textLayoutScale">
        <item name="android:textSize">15sp</item>
        <item name="lineHeight">20sp</item>
    </style>
    
    <style name="TextStBold" parent="TextSt">
        <item name="android:textStyle">bold</item>
    </style>
    
    <style name="TextLgBold" parent="TextStBold">
        <item name="android:textSize">18sp</item>
        <item name="lineHeight">26sp</item>
    </style>

    <style name="TextXsCondensed" parent="TextXs">
        <item name="fontFamily">sans-serif-condensed</item>
    </style>
</resources>